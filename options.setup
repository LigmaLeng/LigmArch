[OPTIONS]
keymap            = dvorak-programmer
locale            = en_AU.UTF-8
block_device      = unset
timezone          = Australia/Melbourne
mirrors           =
                    unset
esp_size          = 1GiB
root_volume_size  = 64GiB
home_volume_size  = 256GiB
hostname          = unset
username          = unset

[PACKAGES]
system            =
                    bluez
                    bluez-utils
                    linux-firmware
                    wayland
                    xdg-user-dirs

terminal          =
                    bash-completion
                    dialog
                    neovim
                    terminus-font

networking        =
                    networkmanager
                    firewalld
                    openssh

tools             =
                    cmake
                    gcc
                    gdb
                    git
                    curl
                    fzf
                    pandoc-cli
                    ripgrep-all
                    w3m

rtfm              =
                    arch-wiki-docs
                    man-db
                    man-pages
                    wikiman
